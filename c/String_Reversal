#include<stdio.h>
#include<string.h>
void main()
{
    int i, j, k,n;
    scanf("%d\n",&n);
    char str[n];
    char rev_str[n];
    printf("Enter a string:\t");
    scanf("%s", str);
    printf("The original string is %s\n", str);
    for(i = 0; str[i] != '\0'; i++);
    {
        k = i-1;
    }
    for(j = 0; j <= i-1; j++)
    {
        rev_str[j] = str[k];
        k--;
    }
    printf("The reverse string is %s\n", rev_str);
}
